<!-- Mobile Share --> 
<div class="container hidden-md-up">
  <div class="row py-3">
  	<div class="col d-flex justify-content-end">
  		<img class="d-inline-block" src="{{ cards.shareImg }}" alt="Share Icon">
  		<img class="d-inline-block ml-5" src="{{ cards.saveImg }}" alt="Favorite Icon">
  	</div>
	</div>
</div>

<!-- Sticky CTA --> 
<div class="container-fluid sticky-cta m-0 p-0 py-md-2">
	
	<!-- Desktop --> 
	<div class="container hidden-sm-down">
    <div class="row">
    	<div class="col d-flex justify-content-end pr-0">
    		<p class="display7 d-inline-block my-auto mr-auto bold sticky-title"><a class="top" href="#">{{ eventHero.heroTitle }}</a></p>
    		<img class="d-inline-block mr-4" src="{{ cards.shareImg }}" alt="Share Icon">
    		<img class="d-inline-block mr-4" src="{{ cards.saveImg }}" alt="Favorite Icon">
    		 <!-- button before modal -->
         <!--<button type="button" class="btn btn-primary d-inline-block mr-0 cta">{{ eventHero.cta }}</button>-->
        <button type="button" class="btn btn-primary d-inline-block mr-0 cta" data-toggle="modal" data-target="#MM3">{{ eventHero.cta }}</button>
    	</div>
    </div>
	</div>
	
	<!-- Mobile Footer CTA --> 
	<div class="container-fluid hidden-md-up fixed-bottom footer-cta fade-in" id="cta">
    <div class="row">
    	<div class="col-4 d-flex justify-content-center p-2">
    		  <img class="d-inline-block mx-3" src="{{ cards.shareImg }}" alt="Share Icon">
          <img class="d-inline-block mx-3" src="{{ cards.saveImg }}" alt="Favorite Icon">
    	</div>
      <div class="col-8 d-flex justify-content-end p-2">
        <!-- button before modal -->
        <!-- <button type="button" class="btn btn-primary d-inline-block mr-0 cta">{{ eventHero.cta }}</button>-->
        <button type="button" class="btn btn-primary d-inline-block mr-0 cta" data-toggle="modal" data-target="#MM1">{{ eventHero.cta }}</button>
      </div>
    </div>
	</div>

</div>

