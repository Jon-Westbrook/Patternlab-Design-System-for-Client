<!-- Sticky CTA -->
<div class="container-fluid sticky-cta m-0 p-0 py-md-2">

	<!-- Desktop -->
	<div class="container hidden-sm-down">
		<div class="row">
			<div class="col d-flex justify-content-end pr-0">
				<p class="display7 d-inline-block my-auto mr-auto bold sticky-title">
					<a class="top" href="#">{{ eventHero.heroTitle }}</a>
				</p>
				
				<a href="#" class="share share--facebook my-auto mr-4 " data-toggle="popover" data-trigger="focus" data-placement="bottom" data-html="true" title=" 
					<div class='addthis_toolbox bg-gray-dark'>
							<a class='addthis_button_facebook'><img src='/images/facebook-white.svg' alt='Share to Facebook' height='28' width='28'  ></a>
							<a class='addthis_button_linkedin px-2'><img src='/images/linkedIn-white.svg' alt='Share to LinkedIn' height='28' width='28' ></a>
							<a class='addthis_button_twitter'><img src='/images/twitter-white.svg' alt='Share to Twitter' height='28' width='28' ></a>
					</div>
				"></a>
				<a href="#" class="share share--save my-auto mr-4" data-toggle="popover" data-trigger="focus" data-placement="bottom" data-html="true" title="
					<div class='bg-gray-dark p-2'>
						<a href='#' target='_self' class='light'>Log In to Save</a>
					</div>
				"></a>

				<!-- button before modal -->
				<!--<button type="button" class="btn btn-primary d-inline-block mr-0 cta">{{ eventHero.cta }}</button>-->
				<button type="button" class="btn btn-primary d-inline-block mr-0 cta" data-toggle="modal" data-target="#MM1">{{ eventHero.cta }}</button>
			</div>
		</div>
	</div>

	<!-- Mobile Footer CTA -->
	<div class="container-fluid hidden-md-up fixed-bottom footer-cta fade-in" id="cta">
		<div class="row">
			<div class="col-6 d-flex justify-content-center p-2">
				<a href="#" class="share share--facebook my-auto mx-3 mx-sm-5" data-toggle="popover" data-trigger="focus" data-placement="right" data-html="true" title=" 
					<div class='addthis_toolbox bg-gray-dark'>
							<a class='addthis_button_facebook'><img src='/images/facebook-white.svg' alt='Share to Facebook' height='28' width='28'  ></a>
							<a class='addthis_button_linkedin px-2'><img src='/images/linkedIn-white.svg' alt='Share to LinkedIn' height='28' width='28' ></a>
							<a class='addthis_button_twitter'><img src='/images/twitter-white.svg' alt='Share to Twitter' height='28' width='28' ></a>
					</div>
				"></a>
				<a href="#" class="share share--save my-auto mx-3 mx-sm-5" data-toggle="popover" data-trigger="focus" data-placement="top" data-html="true" title="
					<div class='bg-gray-dark p-2'>
						<a href='#' target='_self' class='light'>Log In to Save</a>
					</div>
				"></a>
			</div>
			<div class="col-6 d-flex justify-content-end p-2">
				<!-- button before modal -->
				<!-- <button type="button" class="btn btn-primary d-inline-block mr-0 cta">{{ eventHero.cta }}</button>-->
				<button type="button" class="btn btn-primary d-inline-block mr-0 cta" data-toggle="modal" data-target="#MM1">{{ eventHero.cta }}</button>
			</div>
		</div>
	</div>

</div>
